<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#CDCDCD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_layout">

        <TextView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textSize="60sp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="SH"
            android:background="#5B11F9"
            android:textColor = "#FFFFFF"/>
        <TextView
            android:id="@+id/mobNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:fontFamily="sans-serif-light"
            android:text="mobile number"
            android:textSize="17sp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:textColor="#5B11F9"/>
        <TextView
            android:id="@+id/name"
            style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobNum"
            android:layout_marginStart="12dp"
            android:text="name here"
            android:textSize="22sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:text="relation"
            android:textSize="19sp"
            android:textColor="#656565"/>

        <ImageButton
            android:id="@+id/delete_cont"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/ic_baseline_delete_24"
            android:backgroundTint="#CF2626"/>
        <ImageButton
            android:id="@+id/edit_cont"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:layout_toStartOf="@id/delete_cont"
            android:layout_marginTop="150dp"
            android:background="@drawable/ic_baseline_edit_24"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>